@model ECommerceApp.Models.Address

@if (TempData["error"] != null)
{
    <div class="alert alert-success">
        @TempData["error"]
    </div>
}

<div class="container mt-5">
    <form method="post" class="row g-3 bg-light p-4 rounded shadow-sm">
        <div class="col-12">
            <h2 class="text-primary">Add New Address</h2>
        </div>

        <div class="col-md-6">
            <label asp-for="Street" class="form-label"></label>
            <input asp-for="Street" class="form-control" />
            <span asp-validation-for="Street" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="City" class="form-label"></label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="State" class="form-label"></label>
            <input asp-for="State" class="form-control" />
            <span asp-validation-for="State" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="PostalCode" class="form-label"></label>
            <input asp-for="PostalCode" class="form-control" min="1" />
            <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>

        <div class="col-12 mt-3">
            <div class="row">
                <div class="col-md-6">
                    <button type="submit" class="btn btn-primary w-100">Add</button>
                </div>
                <div class="col-md-6">
                    <a asp-controller="Address" asp-action="Index" class="btn btn-dark w-100">Back To List</a>
                </div>
            </div>
        </div>
    </form>
</div>

<style>
    .form-label {
        font-weight: 600; /* Emphasize labels */
    }

    .form-control {
        padding: 0.5rem; /* Adjust input padding */
    }

    .text-primary {
        color: #007bff !important;
    }

    .bg-light {
        background-color: #f8f9fa !important;
    }

    .rounded {
        border-radius: 8px;
    }

    .shadow-sm {
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
</style>
