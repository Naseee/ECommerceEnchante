@model ECommerceApp.Models.WishListModel

 <form method="post"  >
   
     <input asp-for="ProductId" hidden />             
    
    <div class="card shadow border-0 mt-4">
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-6 col-md-2 offset-lg-1 pb-1">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                            <small>Back to home</small>
                        </a>
                    </div>
                </div>
                
                <div class="row">
                    <div class=" col-12 col-lg-3 offset-lg-1 text-center mb-3">
                       
                     @if (Model.Product.ProductImages != null && Model.Product.ProductImages.Count>0)
                     {
                       @foreach(var image in Model.Product.ProductImages)
                            {
                                <img src="@image.ImageUrl" style="width: 100%; border: 1px solid black; border-radius: 5px; margin-bottom: 10px;" alt="Product Image" />
                            }
                     }
                
                    
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">
                        <div class="row ps-2">
                            <h3 class="text-dark text-opacity-50">@Model.Product.Name</h3>
                        </div>
                        
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-50">@Model.Product.Description</h6>
                        </div>
                        <div class="row text-center ps-2">
                            <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                                <div class="text-dark text-opacity-50 fw-semibold">Shades</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                                <div class="text-dark text-opacity-50 fw-semibold">Red</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                                <div class="text-dark text-opacity-50 fw-semibold">Pink</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                                <div class="text-dark text-opacity-50 fw-semibold">Brown</div>
                            </div>
                        </div>
                        <div class="row text-center ps-2">
                            <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                                <div>Price: @Model.Product.Price $</div>
                            </div>
                        </div>
                      
                        <div class="row pl-2 mb-3">
                            <div class="col-md-4">
                                
                                <div class="input-group mb-3">
    <span class="input-group-text bg-primary text-white border-0 fw-semibold" id="inputGroup-sizing-default">Count</span>
    <input asp-for="Quantity" type="number" class="form-control text-end" readonly min="1" />
</div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-6 pb-1">
                                <button type="submit" class="btn btn-dark bg-gradient w-100 py-2 text-uppercase fw-semibold">Add to WishList</button>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </form>
<style>
.image-cropper {
    width: 100%;
    height: 200px; /* Set desired height */
    overflow: hidden;
    position: relative;
}

.image-cropper img {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Crop the image to fill the container */
    object-position: center; /* Center the image within the container */
}
</style
