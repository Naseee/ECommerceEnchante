@model Product

<div class="container mt-5">
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <!-- Form Section -->
            <div class="col-md-8 offset-md-2">
                <div class="mb-4 text-center">
                    <h2 class="text-danger">Delete Product</h2>
                    <p class="text-muted">Are you sure you want to delete this product? This action cannot be undone.</p>
                </div>
                <input asp-for="Id" hidden />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold">Product Name</label>
                    <input asp-for="Name" class="form-control" readonly />
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3" readonly></textarea>
                </div>
                <div class="mb-3">
                    <label asp-for="Price" class="form-label fw-bold">Price</label>
                    <input asp-for="Price" class="form-control" readonly />
                </div>
                <div class="mb-3">
                    <label asp-for="Category.Id" class="form-label fw-bold">Category </label>
                    <input asp-for="Category.Id" class="form-control" readonly />
                </div>
                <div class="row mt-4">
                    <div class="col-6">
                        <button type="submit" class="btn btn-danger w-100">Delete</button>
                    </div>
                    <div class="col-6">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary w-100">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
