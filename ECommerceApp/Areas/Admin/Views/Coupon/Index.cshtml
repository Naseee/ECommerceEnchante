@model IEnumerable<ECommerceApp.Models.Coupon>

<div class="container my-5 p-4 shadow-sm rounded bg-light">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="text-primary fw-bold">Coupon List</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="Coupon" asp-action="Create" class="btn btn-primary">Add Coupon</a>
        </div>
    </div>

    <table class="table table-bordered table-striped table-hover bg-white">
        <thead class="table-primary text-center">
            <tr>
                <th>Code</th>
                <th>Discount Percentage</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Is Active</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @if (Model.Any())
            {
                @foreach (var coupon in Model)
                {
                    <tr>
                        <td>@coupon.Code</td>
                        <td>@coupon.DiscountPercentage.ToString("F2") %</td>

                        <td>@(coupon.EndDate.HasValue ? coupon.StartDate.Value.ToString("MM/dd/yyyy") : "N/A")</td>
                         <td>@(coupon.StartDate.HasValue ? coupon.EndDate.Value.ToString("MM/dd/yyyy") : "N/A")</td>
                        <td>@coupon.IsActive</td>
                         <td class="text-center">
                            <a asp-controller="Coupon" asp-action="Edit" asp-route-Id="@coupon.Id" class="btn btn-sm btn-primary">Edit</a>
                        </td>
                        <td class="text-center">
                            <a asp-controller="Coupon" asp-action="Delete" asp-route-Id="@coupon.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">No Coupons Found</td>
                </tr>
            }
        </tbody>
    </table>
</div>
