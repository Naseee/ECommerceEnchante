@model ECommerceApp.Models.Offer

<div class="container mt-5">
    <div class="card shadow rounded">
        <div class="card-header bg-danger text-white text-center">
            <h2 class="text-danger">Delete Offer</h2>
            <p class="text-muted">Are you sure you want to delete this coupon? This action cannot be undone.</p>
        </div>
        <div class="card-body p-4">
            <p class="text-danger text-center fw-bold">Are you sure you want to delete this offer? This action cannot be undone.</p>
            <form method="post">
                <div class="mb-3">
                    <label asp-for="OfferName" class="form-label fw-bold">Offer Name</label>
                    <input asp-for="OfferName" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="DiscountPercentage" class="form-label fw-bold">Discount Percentage</label>
                    <input asp-for="DiscountPercentage" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="StartDate" class="form-label fw-bold">Start Date</label>
                    <input asp-for="StartDate" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="EndDate" class="form-label fw-bold">End Date</label>
                    <input asp-for="EndDate" class="form-control" readonly />
                </div>

                <div class="row mt-4">
                    <div class="col-12 col-md-6">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-12 col-md-6 mt-3 mt-md-0">
                        <a asp-controller="Offer" asp-action="Index" class="btn btn-secondary form-control">Back To List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
